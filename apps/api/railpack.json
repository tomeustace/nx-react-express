{
  "$schema": "https://schema.railpack.com",
  "steps": {
    "install": {
      "commands": ["cd ../.. && npm ci"]
    },
    "build": {
      "inputs": [{ "step": "install" }],
      "commands": ["cd ../.. && npx nx build api --configuration=production"]
    }
  },
  "deploy": {
    "startCommand": "node dist/main.js"
  }
}

