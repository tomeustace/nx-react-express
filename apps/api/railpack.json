{
  "$schema": "https://schema.railpack.com",
  "steps": {
    "build": {
      "commands": [
        "cd ../.. && npm ci && npx nx build api --configuration=production",
        "ls -la ../../apps/api/",
        "mkdir -p dist",
        "cp -r ../../apps/api/dist/* dist/",
        "ls -la dist/"
      ]
    }
  },
  "deploy": {
    "inputs": [
      {
        "step": "build",
        "include": ["dist"]
      }
    ],
    "startCommand": "node dist/main.js"
  }
}
