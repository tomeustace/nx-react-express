{
  "$schema": "https://schema.railpack.com",
  "steps": {
    "install": {
      "commands": ["cd ../.. && npm ci"]
    },
    "build": {
      "inputs": [{ "step": "install" }],
      "commands": ["cd ../.. && npx nx build shop --configuration=production"]
    }
  },
  "deploy": {
    "startCommand": "npx serve -s dist -l $PORT"
  }
}

