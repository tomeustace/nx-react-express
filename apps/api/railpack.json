{
  "$schema": "https://schema.railpack.com",
  "steps": {
    "build": {
      "commands": [
        "find /app -name package-lock.json 2>/dev/null || echo 'Not in /app'",
        "find / -maxdepth 3 -name package-lock.json 2>/dev/null | head -5",
        "ls -la /workspace 2>/dev/null || echo 'No /workspace'"
      ]
    }
  },
  "deploy": {
    "inputs": [
      {
        "step": "build",
        "include": ["dist"]
      }
    ],
    "startCommand": "node dist/main.js"
  }
}
