{
  "$schema": "https://schema.railpack.com",
  "steps": {
    "build": {
      "commands": [
        "pwd",
        "ls -la /app/ | head -30",
        "ls -la /app/apps 2>/dev/null || echo 'No /app/apps'",
        "cat /app/package.json | head -20"
      ]
    }
  },
  "deploy": {
    "inputs": [
      {
        "step": "build",
        "include": ["/app/apps/api/dist"]
      }
    ],
    "startCommand": "cd /app/apps/api && node dist/main.js"
  }
}
