{
  "$schema": "https://schema.railpack.com",
  "steps": {
    "build": {
      "commands": [
        "cd /app && npm ci && ./node_modules/.bin/nx build api --configuration=production && ls -la /app/apps/api/dist/"
      ]
    }
  },
  "deploy": {
    "inputs": [
      {
        "step": "build",
        "include": ["/app/apps/api/dist"]
      }
    ],
    "startCommand": "cd /app/apps/api && node dist/main.js"
  }
}
